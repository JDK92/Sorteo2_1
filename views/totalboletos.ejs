    <main>
        <div class="container center-align">
            <h1>Folios generados:
            </h1>
            <h2 class="green-text text-darken-4">
                <%= contador %>
            </h2>
            <table class="striped responsive-table">
                <thead>
                    <tr>
                        <th>Tienda</th>
                        <th>Boletos</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = 0; i < totalBoletos.length; i++) { %>

                        <tr>
                            <td>
                                <%= totalBoletos[i].nombreSucursal %>
                            </td>
                            <td>
                                <%= totalBoletos[i].boletos %>
                            </td>
                        </tr>

                        <% } %>
                </tbody>
            </table>
        </div>
    </main>

