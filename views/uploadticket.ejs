<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link rel="stylesheet" type="text/css" href="/css/materialize.min.css">
</head>

<body>
    <div class="container">

        <form method="post" action="registrarFactura">
            <!-- <div class="input-field">
                <label>Estado</label>
                <input  type="text">
            </div> -->
            <!-- <div class="input-field">
                <label>Ciudad </label>
                <input  type="text">
            </div> -->

            <div class="input-field col s12">

                <select name="tiendaPicked">
                    <option value="" disabled selected>
                        Selecciona una sucursal
                    </option>
                    <% for (var i = 0; i < tiendas.length; i++) { %>
                        <option value="<%= tiendas[i].idTienda %>" name="<%= tiendas[i].idTienda %>">
                            <%= tiendas[i].nombreTienda %>
                        </option>

                        <%  }%>
                </select>
            </div>
            <div class="input-field">
                <label># de cliente</label>
                <input type="text" name="cliente">
            </div>
            <div class="input-field">
                <label>Factura</label>
                <input type="text" name="factura">
            </div>
            <div class="input-field">
                <label>Importe</label>
                <input type="text" name="importe">
            </div>
            <div class="input-field">
                <label>Fecha de Compra</label>
                <input type="text" name="fecha" class="datepicker">
            </div>
            <div class="input-field center-align">
                <button class="btn waves-effect waves-light" type="submit" name="action">Enviar</button>
            </div>
        </form>
        <a href="mytickets">
            Regresar
        </a>
    </div>

    <script src="/js/materialize.min.js"></script>
    <script src="/js/script.js">
    </script>
</body>

</html>